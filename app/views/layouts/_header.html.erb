        <li class="nav-item css_font"><%= link_to new_user_session_path,class: 'nav-link' do %>user login<% end %></li>
        <li class="nav-item css_font"><%= link_to new_admin_session_path,class: 'nav-link' do %>admin login<% end %></li>
        <% end %>
        </ul>
      </div>
    </div>
  </nav>
