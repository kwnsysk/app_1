<header>
  <nav class="navbar navbar-expand-lg navbar-light " style="background-color: #FFFFFF;">
    <div class="container">
      <!--ハンバーガーメニューの設定-->
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
        <% if admin_signed_in? %>
        <!--管理者-->
        <li class="nav-item css_font"><%= link_to root_path,class: 'nav-link' do %>管理者menu１<% end %></li>
        <li class="nav-item css_font"><%= link_to root_path,class: 'nav-link' do %>管理者menu２<% end %></li>
        <% elsif user_signed_in? %>
        <!--会員-->
        <li class="nav-item css_font"><%= link_to root_path,class: 'nav-link' do %>会員menu１<% end %></li>
        <li class="nav-item css_font"><%= link_to root_path,class: 'nav-link' do %>会員menu２<% end %></li>
